<div class="container">
  <!-- include partial here for searching -->
   <h2>Search hotels and see their details</h2>
<form class="form-inline" id="serachHotelForm" action="search" method="get">
  <div class="form-group">
    <label for="country">Country:</label>
    <input type="text" class="form-control" id="hotel_country" name="hotel[country]" placeholder="Enter Country">
  </div>
  <div class="form-group">
    <label for="state">State:</label>
    <input type="text" class="form-control" id="hotel_state" name="hotel[state]" placeholder="Enter State">
  </div>
  <div class="form-group">
    <label for="city">City:</label>
    <input type="text" class="form-control" id="hotel_city" name="hotel[city]" placeholder="Enter City">
  </div>
  <button type="submit" class="btn btn-default" id="search_hotels">Search</button>
</form>
</div>


<div class="container" id = "serched_hotels">
  <h2>Available Hotels : </h2>
             
  <% if @hotels.blank? %>
    <h2>No record found </h2>
  <% else %>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Rate</th>
          <th>Address</th>
        </tr>
      </thead>
      <tbody>
        <% @hotels.try(:each) do |hotel| %>
          <tr class="<%= table_class %>">
            <td><%= hotel.name %></td>
            <td><%=hotel.currency %><%= hotel.room_rate %></td>
            <td><%= hotel.address %>, <%= hotel.city %>,<%= hotel.state_province %>,<%= hotel.country %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>